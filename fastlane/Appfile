# Appfile - App Store Connect Configuration
# For more information about the Appfile, see:
#     https://docs.fastlane.tools/advanced/#appfile

# App Identifier (Bundle ID)
app_identifier("be.ballooninc.trivit")

# Apple ID email address (for legacy auth - prefer API key)
apple_id(ENV["APPLE_ID"]) if ENV["APPLE_ID"]

# iTunes Connect Team ID (from App Store Connect)
itc_team_id(ENV["ITC_TEAM_ID"]) if ENV["ITC_TEAM_ID"]

# Developer Portal Team ID
team_id(ENV["TEAM_ID"]) if ENV["TEAM_ID"]

# For all lanes, use these identifiers
for_platform :ios do
  app_identifier("be.ballooninc.trivit")

  for_lane :watch do
    app_identifier("be.ballooninc.trivit.watchkitapp")
  end

  for_lane :widget do
    app_identifier("be.ballooninc.trivit.widget")
  end
end
